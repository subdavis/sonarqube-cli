{
  "name": "sonarqube-cli",
  "description": "A command-line API client for SonarQube Server and Cloud",
  "homepage": "https://github.com/subdavis/sonarqube-cli",
  "license": "MIT",
  "keywords": [
    "SonarQube",
    "SonarCloud"
  ],
  "version": "0.1.5",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/subdavis/sonarqube-cli.git"
  },
  "bin": {
    "snr": "./dist/index.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "lint": "eslint src",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "refresh-docs": "tsx docs/refresh-docs.ts",
    "validate": "npm-run-all --parallel build format lint typecheck test"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "axios-curlirize": "^2.0.0",
    "chalk": "^5.6.0",
    "commander": "^12.0.0",
    "fast-xml-parser": "^5.2.5",
    "turndown": "^7.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.0.0",
    "jest": "^30.1.3",
    "msw": "^2.11.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.0",
    "ts-jest": "^29.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "yarn@4.9.4"
}
